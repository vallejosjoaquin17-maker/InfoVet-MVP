// Reglas de Seguridad Firestore para InfoVet
// Copiar en Firebase Console > Firestore > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funcion helper: verificar si el usuario esta autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Funcion helper: verificar si es el dueno del recurso
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Funcion helper: verificar rol de usuario
    function hasRole(role) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == role;
    }
    
    // Funcion helper: verificar si es admin o veterinario
    function isAdminOrVet() {
      return hasRole('admin') || hasRole('veterinario');
    }
    
    // ==================== USUARIOS ====================
    match /users/{userId} {
      // Lectura: solo el propio usuario o admin/veterinario
      allow read: if isOwner(userId) || isAdminOrVet();
      
      // Creacion: cualquier usuario autenticado puede crear su perfil
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Actualizacion: solo el propio usuario
      allow update: if isOwner(userId);
      
      // Eliminacion: solo admin
      allow delete: if hasRole('admin');
    }
    
    // ==================== MASCOTAS ====================
    match /mascotas/{mascotaId} {
      // Lectura: dueno de la mascota o admin/veterinario
      allow read: if isAuthenticated() && 
                    (resource.data.duenioId == request.auth.uid || isAdminOrVet());
      
      // Creacion: usuario autenticado, debe ser el dueno
      allow create: if isAuthenticated() && 
                      request.resource.data.duenioId == request.auth.uid;
      
      // Actualizacion: dueno o admin/veterinario
      allow update: if isAuthenticated() && 
                      (resource.data.duenioId == request.auth.uid || isAdminOrVet());
      
      // Eliminacion: solo admin
      allow delete: if hasRole('admin');
    }
    
    // ==================== HISTORIALES ====================
    match /historiales/{historialId} {
      // Lectura: dueno de la mascota asociada o admin/veterinario
      allow read: if isAuthenticated() && 
                    (get(/databases/$(database)/documents/mascotas/$(resource.data.mascotaId)).data.duenioId == request.auth.uid 
                     || isAdminOrVet());
      
      // Creacion: solo veterinarios o admin
      allow create: if isAdminOrVet();
      
      // Actualizacion: solo veterinarios o admin
      allow update: if isAdminOrVet();
      
      // Eliminacion: solo admin
      allow delete: if hasRole('admin');
    }
  }
}
